<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samsung Galaxy S7"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/samsung"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="Specyfikacja:"/>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <TableRow>
                    <TextView
                        android:text="Wymiary:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="142,40 mm x 69,60 mm x 7,90 mm"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Waga:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="152,00 g"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Procesor:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="Samsung Exynos 8890\nZegar procesora: 2,30 GHz\nLiczba rdzeni: 8\nGPU: ARM Mali-T880 MP12 @650 MHz"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Pamięć RAM:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="4 GB"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Pamięć\nwbudowana:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="32 GB"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="POWRÓT"
            android:onClick="exitSamsung"/>

    </LinearLayout>
</ScrollView>