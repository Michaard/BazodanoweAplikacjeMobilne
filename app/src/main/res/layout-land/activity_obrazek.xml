<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/topTextPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obrazki"
        android:textSize="30dp"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/android"
        android:contentDescription=""
        android:layout_below="@+id/topTextPic"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/return1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exitPicture"
        android:text="Powrót"
        android:layout_alignTop="@+id/topTextPic"
        android:layout_alignRight="@id/imageView"
        android:layout_alignStart="@+id/prevPicture" />

    <Button
        android:id="@+id/nextPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changePicNext"
        android:text="Następny"
        android:layout_alignBaseline="@+id/prevPicture"
        android:layout_alignBottom="@+id/prevPicture"
        android:layout_marginLeft="5dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/prevPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changePicPrev"
        android:text="Poprzedni"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp" />
</RelativeLayout>