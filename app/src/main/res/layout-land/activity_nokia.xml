<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nokia 3310"
                    android:textSize="20dp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/nokia"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="Specyfikacja:"/>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <TableRow>
                    <TextView
                        android:text="Wymiary:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="115,60 mm x 51,00 mm x 12,80 mm"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Waga:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="79,60 g"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Procesor:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="Brak danych"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Pamięć RAM:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="Brak danych"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Pamięć\nwbudowana:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="16 MB"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_column="2"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="POWRÓT"
            android:onClick="exitNokia"/>

    </LinearLayout>
</ScrollView>