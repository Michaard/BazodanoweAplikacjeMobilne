<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTC 620G Desire"
                android:textSize="20dp"
                android:layout_marginTop="72dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/htc"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="Specyfikacja:"/>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">
                <TableRow>
                    <TextView
                        android:text="Wymiary:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="150,00 mm x 72,70 mm x 9,60 mm"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Waga:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="160,00 g"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Procesor:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="MediaTek MT6592\nZegar procesora: 1,70 GHz\nLiczba rdzeni: 8\nGPU: ARM Mali-450 MP4 @700 MHz"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Pamięć RAM:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="1 GB"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_column="2"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="Pamięć\nwbudowana:"
                        android:layout_marginBottom="5dp"
                        android:layout_column="1"/>
                    <TextView
                        android:text="8 GB"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_column="2"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="POWRÓT"
            android:onClick="exitHtc"/>

    </LinearLayout>
</ScrollView>